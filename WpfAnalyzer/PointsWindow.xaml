<Window x:Class="WpfAnalyzer.PointsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAnalyzer"
        mc:Ignorable="d"
        Title="Настройки" Height="307.959" Width="241.34" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="ButtonClose" Content="Закрыть" HorizontalAlignment="Left" Margin="150,245,0,0" VerticalAlignment="Top" Width="75" Click="ButtonClose_Click"/>
        <DataGrid x:Name="DataGridPoints" HorizontalAlignment="Left" Height="230" Margin="10,10,0,0" VerticalAlignment="Top" Width="215" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn IsReadOnly="True" Binding="{Binding Path=x}" Header="X" Width="100" />
                <DataGridTextColumn IsReadOnly="True" Binding="{Binding Path=y}" Header="Y" Width="100" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
